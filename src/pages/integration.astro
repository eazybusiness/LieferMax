---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getEntry } from 'astro:content';

const pageData = await getEntry('pages', 'integration');
---

<BaseLayout 
    title={pageData.data.title}
    description={pageData.data.description}
>
    <!-- Hero Section -->
    <section class="gradient-bg pt-32 pb-20 px-4">
        <div class="max-w-7xl mx-auto text-center text-white">
            {pageData.data.heroBadge && (
                <div class="inline-block bg-white bg-opacity-20 px-4 py-2 rounded-full mb-6">
                    <span class="text-white text-sm font-semibold">{pageData.data.heroBadge}</span>
                </div>
            )}
            <h1 class="text-5xl md:text-6xl font-black mb-6">{pageData.data.heroTitle}</h1>
            <p class="text-xl text-gray-100 max-w-3xl mx-auto">
                {pageData.data.heroSubtitle}
            </p>
        </div>
    </section>

    <!-- Integration Benefits -->
    <section class="py-24 px-4 bg-white">
        <div class="max-w-7xl mx-auto">
            <div class="grid lg:grid-cols-2 gap-16 items-center">
                <div>
                    <h2 class="text-4xl md:text-5xl font-black text-gray-900 mb-6">
                        Perfekte Integration mit <span class="gradient-text">COPA Systeme</span>
                    </h2>
                    <p class="text-xl text-gray-600 mb-8 leading-relaxed">
                        LieferMax arbeitet nahtlos mit drink.3000 und drink.PRO zusammen. Alle Daten werden automatisch synchronisiert – keine doppelte Datenpflege mehr.
                    </p>
                    
                    <div class="space-y-6">
                        <div class="flex items-start gap-4">
                            <div class="w-12 h-12 bg-red-100 rounded-xl flex items-center justify-center flex-shrink-0">
                                <i class="fas fa-sync text-red-600 text-xl"></i>
                            </div>
                            <div>
                                <h3 class="font-bold text-gray-900 mb-2">Automatische Datenübertragung</h3>
                                <p class="text-gray-600">Lieferscheine und Rechnungen direkt in Ihr COPA-System</p>
                            </div>
                        </div>
                        <div class="flex items-start gap-4">
                            <div class="w-12 h-12 bg-red-100 rounded-xl flex items-center justify-center flex-shrink-0">
                                <i class="fas fa-clock text-red-600 text-xl"></i>
                            </div>
                            <div>
                                <h3 class="font-bold text-gray-900 mb-2">Keine Rückerfassung nötig</h3>
                                <p class="text-gray-600">Sparen Sie Zeit und vermeiden Sie Fehler</p>
                            </div>
                        </div>
                        <div class="flex items-start gap-4">
                            <div class="w-12 h-12 bg-red-100 rounded-xl flex items-center justify-center flex-shrink-0">
                                <i class="fas fa-file-archive text-red-600 text-xl"></i>
                            </div>
                            <div>
                                <h3 class="font-bold text-gray-900 mb-2">DMS Archivierung inklusive</h3>
                                <p class="text-gray-600">Automatische PDF-Ablage in Ihrem Dokumentenarchiv</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="bg-gradient-to-br from-red-500 to-red-400 rounded-3xl p-8 text-white">
                        <div class="bg-white bg-opacity-20 backdrop-blur-sm rounded-2xl p-6">
                            <h3 class="text-2xl font-bold mb-4">Unterstützte Systeme</h3>
                            <ul class="space-y-3">
                                <li class="flex items-center gap-3">
                                    <i class="fas fa-check-circle text-xl"></i>
                                    <span class="text-lg">COPA drink.3000</span>
                                </li>
                                <li class="flex items-center gap-3">
                                    <i class="fas fa-check-circle text-xl"></i>
                                    <span class="text-lg">COPA drink.PRO</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- How it Works -->
    <section class="py-24 px-4 bg-gray-50">
        <div class="max-w-7xl mx-auto">
            <div class="text-center mb-16">
                <h2 class="text-4xl md:text-5xl font-black text-gray-900 mb-6">
                    So funktioniert die Integration
                </h2>
                <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                    Nahtloser Datenaustausch zwischen LieferMax und Ihrer COPA Warenwirtschaft
                </p>
            </div>

            <div class="grid md:grid-cols-3 gap-8">
                <div class="bg-white rounded-2xl p-8 shadow-lg">
                    <div class="w-16 h-16 bg-red-100 rounded-xl flex items-center justify-center mb-6">
                        <span class="text-3xl font-black text-red-600">1</span>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-4">Daten aus COPA</h3>
                    <p class="text-gray-600">
                        Touren, Kunden und Artikel werden automatisch aus COPA drink.3000 oder drink.PRO geladen
                    </p>
                </div>
                <div class="bg-white rounded-2xl p-8 shadow-lg">
                    <div class="w-16 h-16 bg-red-100 rounded-xl flex items-center justify-center mb-6">
                        <span class="text-3xl font-black text-red-600">2</span>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-4">Lieferung durchführen</h3>
                    <p class="text-gray-600">
                        Fahrer nutzen LieferMax App für die komplette Auslieferung mit digitalen Lieferscheinen
                    </p>
                </div>
                <div class="bg-white rounded-2xl p-8 shadow-lg">
                    <div class="w-16 h-16 bg-red-100 rounded-xl flex items-center justify-center mb-6">
                        <span class="text-3xl font-black text-red-600">3</span>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-4">Zurück zu COPA</h3>
                    <p class="text-gray-600">
                        Alle Lieferdaten werden automatisch zurück in COPA übertragen und im DMS archiviert
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Technical Details -->
    <section class="py-24 px-4 bg-white">
        <div class="max-w-7xl mx-auto">
            <div class="text-center mb-16">
                <h2 class="text-4xl md:text-5xl font-black text-gray-900 mb-6">
                    Technische Details
                </h2>
            </div>

            <div class="grid md:grid-cols-2 gap-8">
                <div class="bg-gray-50 rounded-2xl p-8">
                    <h3 class="text-2xl font-bold text-gray-900 mb-6 flex items-center gap-3">
                        <i class="fas fa-download text-red-600"></i>
                        Von COPA zu LieferMax
                    </h3>
                    <ul class="space-y-3">
                        <li class="flex items-start gap-3">
                            <i class="fas fa-check text-green-600 mt-1"></i>
                            <span class="text-gray-700">Tourenpläne und Ladescheine</span>
                        </li>
                        <li class="flex items-start gap-3">
                            <i class="fas fa-check text-green-600 mt-1"></i>
                            <span class="text-gray-700">Kundenstammdaten und Adressen</span>
                        </li>
                        <li class="flex items-start gap-3">
                            <i class="fas fa-check text-green-600 mt-1"></i>
                            <span class="text-gray-700">Artikelstamm mit Preisen</span>
                        </li>
                        <li class="flex items-start gap-3">
                            <i class="fas fa-check text-green-600 mt-1"></i>
                            <span class="text-gray-700">Offene Posten</span>
                        </li>
                        <li class="flex items-start gap-3">
                            <i class="fas fa-check text-green-600 mt-1"></i>
                            <span class="text-gray-700">Fahrer- und Fahrzeugdaten</span>
                        </li>
                    </ul>
                </div>

                <div class="bg-gray-50 rounded-2xl p-8">
                    <h3 class="text-2xl font-bold text-gray-900 mb-6 flex items-center gap-3">
                        <i class="fas fa-upload text-red-600"></i>
                        Von LieferMax zu COPA
                    </h3>
                    <ul class="space-y-3">
                        <li class="flex items-start gap-3">
                            <i class="fas fa-check text-green-600 mt-1"></i>
                            <span class="text-gray-700">Lieferscheine und Rechnungen</span>
                        </li>
                        <li class="flex items-start gap-3">
                            <i class="fas fa-check text-green-600 mt-1"></i>
                            <span class="text-gray-700">Leergut-Bewegungen</span>
                        </li>
                        <li class="flex items-start gap-3">
                            <i class="fas fa-check text-green-600 mt-1"></i>
                            <span class="text-gray-700">Barzahlungen und Kassenstand</span>
                        </li>
                        <li class="flex items-start gap-3">
                            <i class="fas fa-check text-green-600 mt-1"></i>
                            <span class="text-gray-700">Tagesabschlüsse</span>
                        </li>
                        <li class="flex items-start gap-3">
                            <i class="fas fa-check text-green-600 mt-1"></i>
                            <span class="text-gray-700">PDF-Dokumente für DMS</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="py-24 px-4 gradient-bg">
        <div class="max-w-4xl mx-auto text-center text-white">
            <h2 class="text-4xl md:text-5xl font-black mb-6">
                Interesse an der COPA Integration?
            </h2>
            <p class="text-xl mb-8 text-gray-100">
                Kontaktieren Sie uns für eine persönliche Beratung zur Integration mit Ihrem COPA System.
            </p>
            <div class="flex flex-wrap justify-center gap-4">
                <a href="/contact" class="bg-white text-red-600 px-10 py-4 rounded-lg font-bold text-lg hover:shadow-2xl transition transform hover:scale-105 inline-block">
                    <i class="fas fa-envelope mr-2"></i>Kontakt aufnehmen
                </a>
                <a href="tel:+4983679139187" class="bg-red-700 bg-opacity-50 backdrop-blur-sm text-white px-10 py-4 rounded-lg font-bold text-lg hover:bg-opacity-70 transition border-2 border-white border-opacity-30">
                    <i class="fas fa-phone mr-2"></i>08367 – 91 39 187
                </a>
            </div>
        </div>
    </section>
</BaseLayout>
